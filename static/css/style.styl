*
  box-sizing border-box

a
  color #000000

a:focus, a:visited
  color #000000

body
  font-family: 'Droid Sans', sans-serif;
  margin 0
  padding 0

footer
  border-top 1px dashed #808080
  text-align center

.destacados
  display -ms-flex
  display -webkit-flex
  display flex
  -ms-justify-content space-around
  -webkit-justify-content space-around
  justify-content space-around

.destacados__parrafo
  width 320px
  text-align justify

.fotos__parrafo
  padding 0 5px

.fotos__share
  border 1px solid #808080
  display inline-block
  height 400px
  margin 15px
  vertical-align top
  width 280px

.header__fotos
  color #34AC98
  font-style italic

.header--left
  position fixed
  left 0
  height 100%

.header__menu--fotos
  display inline-block

.header__social
  width 200px
  margin-top 25px
  margin-left 80px
  text-align center
  border 1px dashed grey

.header--top
  background #ffffff
  position absolute
  top 0
  height 200px
  text-align center
  width 100%

.item__menu1, .item__menu2, .item__menu3
  margin-left 80px

.item__menu--description1, .item__menu--description2, .item__menu--description3
  padding-left 20px

.item__menu1, .item__menu--description1
  display inline-block

.item__menu2, .item__menu--description2
  display inline-block

.item__menu3, .item__menu--description3
  display inline-block

.logo
  margin-top 30px
  padding-left 80px

.main
  float right
  width 75%
  height 400px

.main--fotos
  padding-top 260px
  text-align center
  margin  0 auto
.social__item
  display inline-block

@media screen and (max-width: 1340px)
  .destacados__img
    width 240px
    height 120px

  .destacados__parrafo
    width 240px

@media screen and (max-width: 1200px)
  .destacados__img
    width 180px
    height 120px

  .destacados__parrafo
    width 180px
    text-align center

  .item__menu1, .item__menu2, .item__menu3
    margin-left 20px

  .logo
    padding-left 20px


  .header__social
    margin-left 20px

@media screen and (max-width: 930px)
  .article__destacados
    width 95%

  .header--left
    top 0
    height 200px
    width 100%

  .header__menu
    display inline-block

  .header__social
    display none

  .destacados
    -ms-flex-wrap wrap
    -webkit-flex-wrap wrap
    flex-wrap wrap

  .destacados__img
    width 90%
    height 200px

  .destacados__parrafo
    width 90%

  .logo
    width 100px
    height 100px

  .main
    float none
    margin 0
    padding 0
    margin-top 200px
    height auto
    width 100%
    text-align center

  .menu-fijo
    background #ffffff
    height     auto
    position   fixed
    text-align center
    top        0
    width      100%
    z-index    9999
